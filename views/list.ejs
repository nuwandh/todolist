
<%- include("partials/header"); -%>

  
    <div class="container">
        <div class="header container ">
            <h1 ><%= Date%></h1>
        </div>
        <div class="list">
            
           <% itemLoop.forEach((items)=>{ %>
            <form action="/delete" method="post">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="<%= items.task %>" name="delete" id="flexCheckChecked" onchange="this.form.submit()">
                    <label class="form-check-label" for="flexCheckChecked">
                        <%= items.task %>
                    </label>
                    <input type="hidden" name="checkboxList" value="<%= Date %>">
                  </div>
                </form>

           <% }) %>

           <form action="/" method="post">
            <input type="text" name="newTask" autocomplete="off" >
            
            <button class="btn border fs-2 text" type="submit" value="<%= Date %>" name="findTheList">+</button>
           </form>

        </div>
    </div>
    
    <%- include("partials/footer"); -%>